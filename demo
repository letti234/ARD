
var region = ee.Geometry.Rectangle(-100, 34.669, -99.536, 50.064);

// Create 10 random points in the region.
var randomPoints = ee.FeatureCollection.randomPoints(region, 100);

//Produce 10 km buffer this the are we are going to study
var bufferPoly = function(feature) {
  return feature.buffer(10000);  
};

var buffers = randomPoints.map(bufferPoly);
Map.addLayer(buffers, {}, 'buffers');
print(buffers.limit(10)); //Each buffer has its own ID but some overlap!

var buffsUnion=buffers.union();
print(buffsUnion.limit(10)); //Oh no, now there's only 1 polygon!



var buffsSample=buffers.geometry().dissolve();
Map.addLayer(buffsSample, {}, 'buffers dissolved');
print(buffsSample);

